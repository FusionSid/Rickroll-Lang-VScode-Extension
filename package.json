{
	"name": "rickroll-lang",
	"publisher": "FusionSid",
	"displayName": "Rickroll-Lang",
	"description": "The best programming language ever",
	"icon": "images/logo.jpeg",
	"repository": {
		"type": "git",
		"url": "https://github.com/FusionSid/Rickroll-Lang-VScode-Extension"
	  },
	"version": "0.0.5",
	"engines": {
		"vscode": "^1.66.0"
	},
	"categories": [
		"Other",
		"Programming Languages",
		"Snippets"
	],
	"activationEvents": [
		"onCommand:rickroll.helloWorld",
		"onCommand:rickroll.rickroll"
	],
	"main": "./extension.js",
	"contributes": {
		"languages": [
			{
				"id": "rickroll",
				"aliases": [
					"Rickroll-Lang",
					"rickroll",
					"ricklang"
				],
				"extensions": [
					".rickroll",
					".rr",
					".rickastley"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"commands": [
			{
				"command": "rickroll.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "rickroll.rickroll",
				"title": "Rickroll"
			}
		],
		"snippets": [
			{
				"language": "rickroll",
				"path": "./snippets/snippets.json"
			}
		],
		"grammars": [
			{
				"language": "rickroll",
				"scopeName": "source.rickroll",
				"path": "./syntaxes/rickroll.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.66.0",
		"@vscode/test-electron": "^2.1.2",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"js-yaml": "^4.1.0",
		"mocha": "^9.2.1",
		"typescript": "^4.5.5"
	}
}
